                android:layout_height="match_parent"
                android:text="나쁨" />

            <RadioButton
                android:id="@+id/book_state_WORST2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="매우나쁨" />

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

