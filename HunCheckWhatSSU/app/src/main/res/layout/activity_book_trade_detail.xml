                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="판매자"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/activity_book_info_sellerLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="이름"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/activity_book_info_sellerContactNumberLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="연락처"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="신용도"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="파기/거래횟수"
                            android:textSize="12dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/activity_book_info_sellerContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:id="@+id/activity_book_info_sellerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="홍길동"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/activity_book_info_sellerContactNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="010-0000-0000"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/activity_book_info_sellerCreditRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="******"
                                android:textSize="12dp" />
                            <Space
                                android:layout_width="15dp"
                                android:layout_height="12dp"/>
                            <ImageView
                                android:id="@+id/activity_book_info_sellerCreditRatingImage"
                                android:layout_marginTop="5dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/activity_book_info_sellerCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0건/0건"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="6dp"
                        android:background="#CCC" />

                    <LinearLayout
                        android:id="@+id/activity_book_info_purchaserGroupLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="구매자"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/activity_book_info_purchaserLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="이름"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/activity_book_info_purchaserContactNumberLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="연락처"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="신용도"
                            android:textSize="12dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="파기/거래횟수"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_book_info_purchaserContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:id="@+id/activity_book_info_purchaserText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="홍길동"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/activity_book_info_purchaserContactNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="010-0000-0000"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/activity_book_info_purchaserCreditRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="******"
                                android:textSize="12dp" />
                            <Space
                                android:layout_width="15dp"
                                android:layout_height="12dp"/>
                            <ImageView
                                android:id="@+id/activity_book_info_purchaserCreditRatingImage"
                                android:layout_marginTop="5dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/activity_book_info_purchaserCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0건/0건"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/activity_book_info_sellerLabelGroup_underLine"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/activity_book_info_manGroup"
                    android:layout_marginTop="16dp"
                    android:background="#CCC" />

                <LinearLayout
                    android:id="@+id/activity_book_info_stateLabelGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_book_info_sellerLabelGroup_underLine"
                    android:layout_alignLeft="@id/activity_book_info_title"
                    android:orientation="vertical"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="책 상태"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activity_book_info_state01Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="밑줄 흔적"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state02Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="필기 흔적"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state03Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="겉표지"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state04Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="이름 기입"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state05Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="페이지 변색"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state06Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="페이지 훼손"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/activity_book_info_stateLabelGroup"
                    android:layout_toRightOf="@id/activity_book_info_stateLabelGroup"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state01Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="없음"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state02Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="없음"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state03Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="없음"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state04Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="없음"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state05Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="없음"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_state06Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="없음"
                        android:textSize="12dp" />
                </LinearLayout>

                <View
                    android:id="@+id/activity_book_info_state_underline"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/activity_book_info_stateLabelGroup"
                    android:layout_marginTop="16dp"
                    android:background="#CCC" />

                <LinearLayout
                    android:id="@+id/activity_book_info_placeLabelGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_book_info_state_underline"
                    android:layout_alignLeft="@id/activity_book_info_title"
                    android:orientation="vertical"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="거래 장소"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activity_book_info_placeAddressLabel"
                        android:layout_width="wrap_content"
