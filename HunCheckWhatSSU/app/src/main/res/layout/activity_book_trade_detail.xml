                        android:layout_marginTop="5dp"
                        android:text="주소"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="거래일"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/activity_book_info_placeLabelGroup"
                    android:layout_toRightOf="@id/activity_book_info_placeLabelGroup"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/activity_book_info_placeAddressText"
                        android:layout_below="@id/activity_book_info_title"
                        android:layout_alignLeft="@id/activity_book_info_title"
                        android:layout_marginTop="5dp"
                        android:text="서울특별시 관악구 ..."
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/activity_book_info_tradeDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_book_info_title"
                        android:layout_alignLeft="@id/activity_book_info_title"
                        android:layout_marginTop="5dp"
