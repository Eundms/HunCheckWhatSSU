<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_book_info_bookInfoGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/activity_book_info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="1"
                    android:singleLine="true"
                    android:text="정보처리기사 필기(2013)(시나공 기출문제)"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/activity_book_info_title"
                    android:layout_marginTop="3dp"
                    android:background="#CCC" />

                <ImageView
                    android:id="@+id/activity_book_info_coverImg"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_book_info_title"
                    android:layout_alignTop="@id/activity_book_info_labelGroup"
                    android:layout_alignBottom="@id/activity_book_info_labelGroup"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="14dp"
                    android:adjustViewBounds="false"
                    android:background="#FF0"
                    android:scaleType="fitXY"
                    android:src="@drawable/noimage" />

                <LinearLayout
                    android:id="@+id/activity_book_info_labelGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_book_info_title"
                    android:layout_toRightOf="@id/activity_book_info_coverImg"
                    android:orientation="vertical"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/activity_book_info_authorLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="저자"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_publisherLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="출판사"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_publicationDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="출판일"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_bookCostLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="금액"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_Trade_Info_StateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="16dp"
                        android:text="거래상태"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/activity_book_info_labelGroup"
                    android:layout_toRightOf="@id/activity_book_info_labelGroup"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/activity_book_info_authorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_book_info_title"
                        android:layout_alignLeft="@id/activity_book_info_title"
                        android:layout_marginTop="16dp"
                        android:text="길번R.D"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_publisherText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="길번"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/activity_book_info_publicationDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2012년 11월 28일"
                        android:textSize="12dp" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

