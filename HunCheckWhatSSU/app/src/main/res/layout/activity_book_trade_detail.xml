                            android:id="@+id/activity_book_info_bookCostText"
                            android:text="15,000"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:text="->"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

